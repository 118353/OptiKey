<UserControl x:Class="JuliusSweetland.ETTA.UI.Views.Management.PointingAndSelectingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <GroupBox Grid.Row="0" Header="Pointing">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Source:" 
                       VerticalAlignment="Center" Margin="5" />
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding PointsSources}"
                      DisplayMemberPath="Key"
                      SelectedValuePath="Value"
                      SelectedValue="{Binding PointsSource, Mode=TwoWay}" />
                      
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Mouse position sample interval:" 
                       VerticalAlignment="Center" Margin="5">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Style.Triggers>
                            <Setter Property="Visibility" Value="Collapsed" />
                            <DataTrigger Binding="{Binding PointsSource}" Value="{x:Static PointsSources.MousePosition}">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Trigger>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TimeSpanControl Grid.Row="1" Grid.Column="1" TextAlignment="Left"
                             Value="{Binding PointsMousePositionSampleInterval, Mode=TwoWay}">
                <TimeSpanControl.Style>
                    <Style TargetType="{x:Type TimeSpanControl}">
                        <Style.Triggers>
                            <Setter Property="Visibility" Value="Collapsed" />
                            <DataTrigger Binding="{Binding PointsSource}" Value="{x:Static PointsSources.MousePosition}">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Trigger>
                    </Style>
                </TimeSpanControl.Style>
            </TimeSpanControl>
            
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Time until point becomes irrelevent:" 
                       VerticalAlignment="Center" Margin="5" />
            <TimeSpanControl Grid.Row="2" Grid.Column="1" TextAlignment="Left"
                                    Minimum="-10" Maximum="10" Interval="1"
                                    Value="{Binding PointTtl, Mode=TwoWay}" />
        </GroupBox>
        
        <GroupBox Grid.Row="1" Header="Sound effects">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Info:" 
                       VerticalAlignment="Center" Margin="5" />
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding InfoSoundFiles}"
                      DisplayMemberPath="Key"
                      SelectedValuePath="Value"
                      SelectedValue="{Binding InfoSoundFile, Mode=TwoWay}" />
    
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Selection:" 
                       VerticalAlignment="Center" Margin="5" />
            <ComboBox Grid.Row="1" Grid.Column="1" 
                      ItemsSource="{Binding SelectionSoundFiles}"
                      DisplayMemberPath="Key"
                      SelectedValuePath="Value"
                      SelectedValue="{Binding SelectionSoundFile, Mode=TwoWay}" />
            
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Error:" 
                       VerticalAlignment="Center" Margin="5" />
            <ComboBox Grid.Row="2" Grid.Column="1" 
                      ItemsSource="{Binding ErrorSoundFiles}"
                      DisplayMemberPath="Key"
                      SelectedValuePath="Value"
                      SelectedValue="{Binding ErrorSoundFile, Mode=TwoWay}" />
            
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Muli-key selection starting:" 
                       VerticalAlignment="Center" Margin="5" />
            <ComboBox Grid.Row="3" Grid.Column="1" 
                      ItemsSource="{Binding MultiKeySelectionCaptureStartSoundFiles}"
                      DisplayMemberPath="Key"
                      SelectedValuePath="Value"
                      SelectedValue="{Binding MultiKeySelectionCaptureStartSoundFile, Mode=TwoWay}" />
            
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Muli-key selection ending:" 
                       VerticalAlignment="Center" Margin="5" />
            <ComboBox Grid.Row="4" Grid.Column="1" 
                      ItemsSource="{Binding MultiKeySelectionCaptureEndSoundFiles}"
                      DisplayMemberPath="Key"
                      SelectedValuePath="Value"
                      SelectedValue="{Binding MultiKeySelectionCaptureEndSoundFile, Mode=TwoWay}" />
        </GroupBox>
    </Grid>
</UserControl>

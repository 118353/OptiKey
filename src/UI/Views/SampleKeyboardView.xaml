        <SolidColorBrush x:Key="KeyBorderBrush" Color="{StaticResource Gray}" />
        <SolidColorBrush x:Key="KeyBackgroundBrush" Color="{StaticResource Black}" />
        <SolidColorBrush x:Key="KeySelectionForegroundBrush" Color="{StaticResource Blue}" />
        <SolidColorBrush x:Key="KeySelectionBorderBrush" Color="{StaticResource Gray}" />
        <SolidColorBrush x:Key="KeySelectionBackgroundBrush" Color="{StaticResource Gray}" />

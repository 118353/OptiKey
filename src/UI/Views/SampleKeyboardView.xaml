        <Color x:Key="Black">Black</Color>
        <Color x:Key="Gray">#6B6B6B</Color>
        <Color x:Key="Blue">#46A3E4</Color>
        <Color x:Key="Red">#FB6043</Color>
        <Color x:Key="Green">#3CAC6F</Color>


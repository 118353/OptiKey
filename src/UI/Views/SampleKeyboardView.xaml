        <SolidColorBrush x:Key="KeyDisabledBorderBrush" Color="{StaticResource Gray}" />
        <SolidColorBrush x:Key="KeyDisabledBackgroundBrush" Color="{StaticResource Black}" />
    </UserControl.Resources>
    

        <Grid Grid.Row="1" Grid.Column="0">
            <Border BorderThickness="1" 
                    BorderBrush="{StaticResource KeyBorderBrush}" 
                    Background="{StaticResource KeyBackgroundBrush}">
                <Viewbox x:Name="MasterViewBox">
                    <TextBlock Text="Pg" FontFamily="/Resources/Fonts/#Roboto Regular" 
                               Foreground="{StaticResource KeyForegroundBrush}" />
                </Viewbox>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Border BorderThickness="1" 
                    BorderBrush="{StaticResource KeyBorderBrush}" 
                    Background="{StaticResource KeyBackgroundBrush}">
                <Viewbox Width="{Binding ElementName=MasterViewBox, Path=ActualWidth}"
                         Height="{Binding ElementName=MasterViewBox, Path=ActualHeight}">
                    <TextBlock Text="a" FontFamily="/Resources/Fonts/#Roboto Regular" 
                               Foreground="{StaticResource KeyForegroundBrush}" />
                </Viewbox>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2">
            <Border BorderThickness="1" 
                    BorderBrush="{StaticResource KeySelectionBorderBrush}" 
                    Background="{StaticResource KeySelectionBackgroundBrush}">
                <Viewbox Width="{Binding ElementName=MasterViewBox, Path=ActualWidth}"
                         Height="{Binding ElementName=MasterViewBox, Path=ActualHeight}">
                    <TextBlock Text="b" FontFamily="/Resources/Fonts/#Roboto Regular" 
                               Foreground="{StaticResource KeySelectionForegroundBrush}" />
                </Viewbox>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="3">
            <Border BorderThickness="1" 
                    BorderBrush="{StaticResource KeyBorderBrush}" 
                    Background="{StaticResource KeyBackgroundBrush}">
                <Viewbox Width="{Binding ElementName=MasterViewBox, Path=ActualWidth}"
                         Height="{Binding ElementName=MasterViewBox, Path=ActualHeight}">
                    <TextBlock Text="c" FontFamily="/Resources/Fonts/#Roboto Regular" 
                               Foreground="{StaticResource KeySelectionForegroundBrush}" />
                </Viewbox>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="4">
            <Border BorderThickness="1" 
                    BorderBrush="{StaticResource KeyDisabledBorderBrush}" 
                    Background="{StaticResource KeyDisabledBackgroundBrush}">
                <Viewbox Width="{Binding ElementName=MasterViewBox, Path=ActualWidth}"
                         Height="{Binding ElementName=MasterViewBox, Path=ActualHeight}">
                    <TextBlock Text="d" FontFamily="/Resources/Fonts/#Roboto Regular" 
                               Foreground="{StaticResource KeyDisabledForegroundBrush}" />
                </Viewbox>
            </Border>
        </Grid>
        

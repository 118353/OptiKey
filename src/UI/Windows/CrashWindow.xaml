<Window x:Class="JuliusSweetland.OptiKey.UI.Windows.CrashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:JuliusSweetland.OptiKey.Properties"
        Width="800"
        MinHeight="150"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen">

    <Border BorderBrush="Red" BorderThickness="5" CornerRadius="10" Margin="5">
        <TextBlock x:Name="TxtCrashMessage" Margin="10" TextWrapping="Wrap" TextAlignment="Center"
                   FontSize="{Binding Source={x:Static properties:Settings.Default}, Path=CrashMessageFontSize}"
                   Text="Bad news - OptiKey has tripped over its feet and has to close down.&#x0a;&#x0a;Are you running anti-virus software (e.g. McAfee)? Try disabling it and run OptiKey again.&#x0a;&#x0a;Still no joy? Email me: optikeyfeedback@gmail.com"/>
    </Border>
</Window>

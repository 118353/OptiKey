<Window x:Class="JuliusSweetland.OptiKey.UI.Windows.CrashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:JuliusSweetland.OptiKey.Properties"
        Width="800"
        MinHeight="150"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen">

    <Border BorderBrush="Red" BorderThickness="5" CornerRadius="10" Margin="5">
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Margin="10" TextWrapping="Wrap" TextAlignment="Center"
                   FontSize="{Binding Source={x:Static properties:Settings.Default}, Path=CrashMessageFontSize}"
                   Text="Uh-oh. OptiKey has tripped over its own feet and crashed!&#x0a;&#x0a;Details of what went wrong will be automatically sent to the developer when you restart OptiKey so that we can fix the problem.&#x0a;&#x0a;OptiKey will close when you click OK."/>
            <Button Grid.Row="1" Content="OK" Width="75" Height="23" HorizontalAlignment="Right" Margin="5" Click="OkButton_OnClick" />    
        </Grid>
    </Border>
</Window>
